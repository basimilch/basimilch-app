  color:$gray-light;
  font-weight:300;
}

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  color: $gray;
  font-size: 2.5em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  @media (max-width: 767px) {
    font-size: 1.6em;
    letter-spacing: 0;
  }
}

h2 {
  font-size: 1.2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: $gray-light;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

span[onclick] {
  @extend a;
  cursor: pointer;
}

// Dev

// Over-specifying a bit to override default rule.
body > .console {
  opacity: 0.7;
  height: 60px;
}

// Header

header {
  background-color: $basiblau;
  border-color: $basiblau_slightly_darker;
  line-height: 1;
  .nav {
    .open {
      & > a,
      & > a:focus,
      & > a:active {
        background-color: $basiblau_darker;
      }
    }
    & > li {
      @media (min-width: 768px) {
        height: 50px;
      }
      & > a {
        color: white;
        &:focus {
          background-color: $basiblau;
        }
        &:hover {
          background-color: $basiblau_slightly_darker;
        }
        &:active {
          background-color: $basiblau_darker;
        }
      }
    }
  }
  .navbar-toggle {
    border-color: white;
    &:hover {
      background-color: $basiblau_slightly_darker;
    }
    .icon-bar {
      background-color: white;
    }
  }
}

.dropdown-menu > li > a {
  &:hover,
  &:focus{
    background-color: $basiblau_ultralight;
  }
}

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: white;
  text-transform: lowercase;
  letter-spacing: -1px;
  &:hover {
    color: $basiblau_ultralight;
    text-decoration: none;
  }
  @media (min-width: 768px) {
    margin-left: -15px;
  }
}


// Footer

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid $gray-medium-light;
  color: $gray-light;
  a {
    color: $gray;
    &:hover {
      color: $gray-darker;
    }
  }
  small {
    float: left;
  }
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 15px;
    }
  }
  #version-label {
    cursor: default;
    text-decoration: none;
    .popover-title {
      font-weight: bold;
    }
    .version-label-content {
      font-size: small;
      .gh-commit {
        color: inherit;
        background: transparent;
      }
      .gh-commit-msgs {
        font-style: italic;
        padding-top: 5px;
        max-height: 90px;
        overflow-x: scroll;
      }
      hr {
        margin-top: 10px;
        margin-bottom: 10px;
      }
    }
  }
}


// Forms

form {
  input,
  textarea,
  select,
  button,
  .uneditable-input {
    border: 1px solid #bbb;
    width: 100%;
    max-width: 100%;
    margin-bottom: 15px;
    @include box_sizing;
    &.form-control {
      border-color: $basiblau;
      background-color: $basiblau_ultralight-bg;
      &:not([disabled]):not([readonly]) {
        &:focus,
        &:active {
          background-color: $basiblau_ultralight;
        }
      }
      &.view-mode {
        @extend .view-mode[type=checkbox];
      }
    }
  }
  .view-mode[type=checkbox] {
    background-color: $basiblau_ultralight;
    border-color: transparent;
    box-shadow: none;
    cursor: default;
  }
  .form-buttons {
    margin-top: 25px;
    margin-bottom: 25px;
    &:not(.row) .btn {
      margin-bottom: 25px;
    }
    a.btn {
      width: 100%;
    }
  }
  input {
    height: auto !important;
  }
  .checkbox {
    .field_with_errors {
      label, a {
        color: $state-danger-text;
      }
      label {
        border: 1px solid $state-danger-text;
        background-color: $state-danger-bg;
        padding: 10px 35px;
      }
    }
  }
  .field_with_errors {
    @extend .has-error;
    .form-control {
      color: $state-danger-text;
      background-color: $state-danger-bg-light;
      &:not([disabled]):not([readonly]) {
        &:focus,
        &:active {
          background-color: $state-danger-bg;
        }
      }
    }
  }
  .checkbox {
    label{
      padding: {
          top: 25px;
        }
      &[disabled] {
          cursor: default;
        }
      }
    span {
      margin-left: 20px;
      font-weight: normal;
    }
    input[type=checkbox] {
      width: auto;
      margin-top: 7px;
    }
  }
  .form-group {
    .help-block {
      font-style: italic;
      font-size: .9em;
    }
  }
}

// NOTE: Do not group these rules. Instead, make a separate rule for
// every selector (one invalid selector in a group makes the whole
// group invalid).
// Source: http://stackoverflow.com/a/9705712
.field_with_errors {
  .form-control::-webkit-input-placeholder {
      @include light_placeholder_with_errors;
  }
  .form-control:-moz-placeholder {
      /* FF 4-18 */
      @include light_placeholder_with_errors;
  }
  .form-control::-moz-placeholder {
      /* FF 19+ */
      @include light_placeholder_with_errors;
  }
  .form-control:-ms-input-placeholder {
      /* IE 10+ */
      @include light_placeholder_with_errors;
  }
}
.form-control::-webkit-input-placeholder {
    @include light_placeholder;
}
.form-control:-moz-placeholder {
    /* FF 4-18 */
    @include light_placeholder;
}
.form-control::-moz-placeholder {
    /* FF 19+ */
    @include light_placeholder;
}
.form-control:-ms-input-placeholder {
    /* IE 10+ */
    @include light_placeholder;
}


