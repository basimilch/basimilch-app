<div class="job_overview">
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th></th>
          <th><%= t 'table_headers.date' %></th>
          <th><%= t 'table_headers.time' %></th>
          <th><%= t 'table_headers.job_title' %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% user.current_year_jobs.each_with_index do |job, i| %>
            <% if job %>
              <tr class="user_signup_job_info <%= job.past? ? "success" : "warning" %>" data-href="<%= job_path(job.id)%>" >
                <td><%= i + 1 %>.</td>
                <td><%= job.start_at.to_date.to_localized_s :short_with_weekday %></td>
                <td><%= "#{job.start_at.to_s(:time)} - #{job.end_at.to_s(:time)}" %></td>
                <td><%= job.title %></td>
                <td>
                  <% if job.past? %>
                    <%= icon :ok, t('.done') %>
                  <% elsif job.ongoing? %>
                    <%= icon :bell, t("time.now") %>
                  <% else %>
                    <%= icon :time do %>
                      <%= time_tag job.start_at do %>
                        <%= job.start_at.relative_in_words %>
                      <% end %>
                    <% end %>
                  <% end %>
                </td>
            <% else %>
              <tr class="user_signup_job_info danger" >
                <td><%= i + 1 %>.</td>
                <td colspan="6"><i><%= t '.open_slot' %></i></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
