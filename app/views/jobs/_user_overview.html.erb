<div class="job_overview">
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th></th>
          <th><%= t 'table_headers.date' %></th>
          <th><%= t 'table_headers.time' %></th>
          <th><%= t 'table_headers.job_title' %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% user.current_year_job_signups.each_with_index do |job_signup, i| %>
            <% if job_signup %>
              <% job = job_signup.job %>
              <tr class="user_signup_job_info <%= tr_class job_signup, job %>" data-href="<%= job_path(job.id)%>" >
                <td><%= i + 1 %>.</td>
                <td><%= job.start_at.to_date.to_localized_s :short_with_weekday %></td>
                <td><%= "#{job.start_at.to_s(:time)} - #{job.end_at.to_s(:time)}" %></td>
                <td><%= job.title %></td>
                <td>
                  <%= status_icon job_signup, job %>
                </td>
            <% else %>
              <tr class="user_signup_job_info danger" >
                <td><%= i + 1 %>.</td>
                <td colspan="6"><i><%= t '.open_slot' %></i></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
