<div class="row">
  <div class="col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.field_for :email, as_type: :string %>

      <%= f.field_for :password %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('.remember_me_on_this_computer')%></span>
      <% end %>

      <div class="form-buttons">
        <%= f.submit_button t('.login') %>
        <%= link_to t('.forgot_password'), '#', class: 'btn btn-link' %>
      </div>
    <% end %>
  </div>
</div>
