<div class="row">
  <div class="col-md-6">
      <%= render 'shared/error_messages', errors: user.errors %>
  </div>
</div>
<%= form_for user, class: 'form-horizontal' do |f| %>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      <%= f.field_for :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
      <%= f.field_for :password, type: :password %>
    </div>
  </div>
  <div class="form-buttons">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
        <%# f.submit_button t('.login'), readonly: true %>
        <%= link_to t('.login'), users_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
        <%= link_to t('.forgot_password'), '#', class: 'btn btn-link' %>
      </div>
    </div>
  </div>

<% end %>
