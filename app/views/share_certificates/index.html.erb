<% provide(:title, t('.title')) %>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t 'table_headers.id' %></th>
        <th><%= t 'table_headers.user' %></th>
        <th><%= t 'table_headers.created_at' %></th>
        <th><%= t 'table_headers.sent_at' %></th>
        <th><%= t 'table_headers.payed_at' %></th>
        <th><%= t 'table_headers.returned_at' %></th>
        <th><%= t 'table_headers.notes' %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @share_certificates.each do |share_certificate| %>
        <tr data-href="<%= share_certificate_path(share_certificate.id) %>">
          <td><%= share_certificate.id %></td>
          <td><%= link_to share_certificate.user.full_name, share_certificate.user %></td>
          <td><%= localized_date_tag share_certificate.created_at, :short_with_year %></td>
          <td><%= localized_date_tag share_certificate.sent_at, :short_with_year %></td>
          <td><%= localized_date_tag share_certificate.payed_at, :short_with_year %></td>
          <td><%= localized_date_tag share_certificate.returned_at, :short_with_year %></td>
          <td><%= truncate share_certificate.notes, length: 20 %></td>
          <td>
            <%= link_to t('.edit'), edit_share_certificate_path(share_certificate) %>
            <%# link_to t('.destroy'), share_certificate, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

