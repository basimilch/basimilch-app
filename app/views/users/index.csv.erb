<%# Source: http://stackoverflow.com/a/4822035 %>
<% headers = User.attribute_names %>
<%= CSV.generate :col_sep => "," do |csv| %>
  <% csv << headers %>
  <% @users.each do |user| %>
    <% csv << headers.map{|attr| user.send(attr)} %>
  <% end %>
<% end %>
