<div class="row">
  <div class="col-md-6">
      <%= render 'shared/error_messages', errors: user.errors %>
  </div>
</div>
<%= form_for(user, class: 'form-horizontal') do |f| %>
  <div class="row">
    <div class="col-sm-3 col-xs-6">
      <%= f.field_for :first_name %>
    </div>
    <div class="col-sm-3 col-xs-6">
      <%= f.field_for :last_name %>
    </div>
    <div class="col-lg-1 col-xs-2">
      <%= f.field_for :admin %>
    </div>
    <div class="col-lg-5 col-sm-4 col-xs-10">
      <%= f.field_for :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <%= f.field_for :postal_address %>
    </div>
    <div class="col-lg-1 col-sm-2 col-xs-4">
      <%= f.field_for :postal_code %>
    </div>
    <div class="col-lg-3 col-sm-2 col-xs-8">
      <%= f.field_for :city %>
    </div>
    <div class="col-sm-2">
      <%= f.field_for :country, readonly: true %>
    </div>
  </div>

  <% if user.new_record? %>
    <%# The form for new users cannot user the formatted versions yet %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.field_for :tel_mobile,  placeholder: :tel_mobile %>
      </div>
      <div class="col-sm-4">
        <%= f.field_for :tel_home,    placeholder: :tel_landline %>
      </div>
      <div class="col-sm-4">
        <%= f.field_for :tel_office,  placeholder: :tel_landline %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.field_for :tel_mobile_formatted,  placeholder: :tel_mobile,
                                                real_attribute: :tel_mobile %>
      </div>
      <div class="col-sm-4">
        <%= f.field_for :tel_home_formatted,    placeholder: :tel_landline,
                                                real_attribute: :tel_home %>
      </div>
      <div class="col-sm-4">
        <%= f.field_for :tel_office_formatted,  placeholder: :tel_landline,
                                                real_attribute: :tel_office %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12">
      <%= f.field_for :notes %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <%= "#{ActionView::Helpers::FormBuilder::REQUIRED_ATTRIBUTE_MARK} " +
            "#{t('.required_field')}" %>
    </div>
  </div>

  <div class="row form-buttons">
    <div class="col-md-offset-7 col-sm-2 col-sm-offset-6 col-xs-4">
      <%= f.cancel_button users_path %>
    </div>
    <div class="col-md-3 col-sm-4 col-xs-8">
      <% if user.new_record? %>
        <%= f.submit_button t('.create_new_user') %>
      <% else %>
        <%= f.submit_button t('.update_user_profile') %>
      <% end %>
    </div>
  </div>
<% end %>
